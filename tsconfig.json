{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "src/@types"],
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/context/MenuContext.tsx"],
  "exclude": ["node_modules"]
}
